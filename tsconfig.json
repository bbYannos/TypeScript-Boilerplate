{
  "compilerOptions": {
    "target": "ES6",
    "experimentalDecorators": true,
    "noImplicitUseStrict": true,
    // dom: console, alert ...
    // es2015: Promise used by Rxjs
    "lib": ["dom", "es2015", "esnext"],
    "removeComments": true,
    "preserveConstEnums": true,
    "rootDir": "src",
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
    },
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  // "files": [],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./Types/*",
    "./src/**/*"
  ]
}